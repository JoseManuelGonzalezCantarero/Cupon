{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/normalizar.css') }}"
          rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/comun.css') }}"
          rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/backend.css') }}"
          rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <header>
        <h1><a href="{{ path('backendPortada') }}">CUPON ADMIN</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('backendOferta') }}">Ofertas</a></li>
                <li><a href="{{ path('backendTienda') }}">Tiendas</a></li>
                <li><a href="{{ path('backendUsuario') }}">Usuarios</a></li>
                <li><a href="{{ path('backendCiudad') }}">Ciudades</a></li>

                <li>{{ render(controller('AppBundle:Ciudad:listaCiudades', {
                        'ciudad': app.session.get('ciudad')
                    })) }}</li>
            </ul>
        </nav>
    </header>

    <article>
        {% block article %}{% endblock %}
    </article>
{% endblock %}