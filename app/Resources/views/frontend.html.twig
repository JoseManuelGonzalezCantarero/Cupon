{% extends '::base.html.twig' %}
{% set ciudadSeleccionada = app.request.attributes.get('ciudad', ciudad_por_defecto) %}

{% block stylesheets %}
    <link href="{{ asset('css/normalizar.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/comun.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/frontend.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block javascripts %}{% endblock %}

{% block body %}
    <header>
        <h1><a href="{{ path('portada') }}">CUPON</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('portada') }}">{{ 'menu.dia' | trans }}</a></li>
                <li><a href="#">{{ 'menu.recientes' | trans }}</a></li>
                <li><a href="#">{{ 'menu.mias' | trans }}</a></li>
                <li>{{ render(controller('AppBundle:Ciudad:listaCiudades', {
                        'ciudad': ciudadSeleccionada
                    })) }}</li>
            </ul>
        </nav>
    </header>

    <article>
        {% block article %}{% endblock %}
    </article>

    <aside>
        {% block aside %}
            <section id="login">
                {{ render(controller('AppBundle:Usuario:cajaLogin')) }}
            </section>

            <section id="nosotros">
                <h2>Sobre nosotros</h2>
                <p>Lorem ipsum dolor sit amet...</p>
            </section>
        {% endblock %}
    </aside>
{% endblock %}